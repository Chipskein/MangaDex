<div>
    <div class="review-card">
        <a href="/users/<%=review.user.id%>">
            <div class='user-img' style="background-image: url(<%=review.user.image%>)"></div>
        </a>

        <div class="review-texts">
            <div class="review-texts-card">
                <a href="/users/<%=review.user.id%>">
                    <h3>
                        <%=review.user.name%>
                    </h3>
                    <h6 class="created-at">Created at <%=new Date(review.created).toString().substring(4,24)%></h6>
                </a>
            </div>
            <%=review.text%>
        </div>
    </div>
    <br>
</div>