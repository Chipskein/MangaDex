<!DOCTYPE html>
<html lang="pt-BR">
<%- include('includes/head.ejs',{title:"Mangadex| Home"})%>
<body>
    <header>
        <%- include('includes/navbar.ejs',{user:user})%>
    </header>
    <article class="main">
        <% mangas.forEach(manga=>{ %>
            <div class="manga-card">
                <img src="<%=manga.image%>" alt="Imagem" class="manga-image">
                <div class="manga-card-div">
                    <a class="manga-name" href="/manga/<%=manga.id%>"><%=manga.name%></a>
                    <p>
                        <%=manga.sinopse%>
                    </p>
                </div>
            </div>    
        <%})%>
    </article>
</body>
</html>